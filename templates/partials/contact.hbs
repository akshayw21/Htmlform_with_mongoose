
<h1 class="mt-3" align="center">Get In Touch</h1>
<div class="container mt-5 text-light">
  




<form action="/contact" method="POST" class="mt-5 fs-5">
  

  <div class="row mb-3">
    <label for="name" class="col-sm-7 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text"  id="name" name="name" style="width: 50%;" required> 
    </div>
  </div>
  <div class="row mb-3">
    <label for="email" class="col-sm-7 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email"  id="email" name="email" style="width: 50%;" required>
    </div>
  </div>

  <div class="row mb-3">
    <label for="phone" class="col-sm-7 col-form-label">Phone</label>
    <div class="col-sm-10">
      <input type="number"  id="phone" name="phone" style="width: 50%;" required>
    </div>
  </div>
  
  <div class="row mb-3">
    <label for="msg" class="col-sm-7 col-form-label">Message</label>
    <div class="col-sm-10">
      <input type="text"  id="msg" name="msg" style="width: 50%;" required>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

</div>